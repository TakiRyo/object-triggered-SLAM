<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="lidar_test_world">

    <!-- Light and ground -->
    <include>
      <uri>model://sun</uri>
    </include>
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Room (10x10 m walls) -->
    <model name="room">
      <static>true</static>
      <link name="walls">

        <!-- Back wall -->
        <visual name="back_visual">
          <geometry><box><size>20 0.1 2.5</size></box></geometry>
          <pose>0 -10 1.25 0 0 0</pose>
          <material><ambient>0.8 0.8 0.8 1</ambient></material>
        </visual>

        <!-- Front wall -->
        <visual name="front_visual">
          <geometry><box><size>20 0.1 2.5</size></box></geometry>
          <pose>0 10 1.25 0 0 0</pose>
          <material><ambient>0.8 0.8 0.8 1</ambient></material>
        </visual>

        <!-- Left wall -->
        <visual name="left_visual">
          <geometry><box><size>0.1 20 2.5</size></box></geometry>
          <pose>-10 0 1.25 0 0 0</pose>
          <material><ambient>0.8 0.8 0.8 1</ambient></material>
        </visual>

        <!-- Right wall -->
        <visual name="right_visual">
          <geometry><box><size>0.1 20 2.5</size></box></geometry>
          <pose>10 0 1.25 0 0 0</pose>
          <material><ambient>0.8 0.8 0.8 1</ambient></material>
        </visual>
      </link>
    </model>
  </world>
</sdf>